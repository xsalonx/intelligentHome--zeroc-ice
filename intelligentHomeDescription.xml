<icegrid>
    <application name="IntelligentHome">
        <server-template id="IntelligentHomeServerTemplate">
            <parameter name="index"/>
            <server id="IntelligentHomeServer${index}"
                    exe="java -jar /ice/node/server.jar --Ice.Config=/ice/node/server.cfg"
                    activation="always">
                <adapter name="HomeAdapter"  endpoints="tcp">
                    <allocatable identity="HomeAdapter${index}"/>
                </adapter>
            </server>
        </server-template>
        <node name="Node1">
            <server-instance template="IntelligentHomeServerTemplate" index="1"/>
        </node>
<!--        <node name="Node2">-->
<!--            <server-instance template="IntelligentHomeServerTemplate" index="2"/>-->
<!--        </node>-->
    </application>
</icegrid>